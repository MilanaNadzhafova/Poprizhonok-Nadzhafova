                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label  HorizontalAlignment="Center"  Content="Попрыгунчик детский №2" VerticalAlignment="Center" FontSize="15" FontFamily="Comic Sans MS"/>
